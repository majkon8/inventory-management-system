{
    "name": "api",
    "version": "1.0.0",
    "main": "index.ts",
    "engines": {
        "node": "^20.0.0",
        "npm": "^10.0.0"
    },
    "_moduleAliases": {
        "@": "./src",
        "@tests": "./tests"
    },
    "scripts": {
        "dc-up": "docker-compose up -d",
        "dc-down": "docker-compose down",
        "dev": "ts-node-dev --respawn --transpile-only src/bin/server.ts",
        "eslint": "eslint . --fix --cache --ignore-path=.gitignore",
        "type-check": "tsc --noEmit",
        "prettier": "prettier --write .",
        "test": "NODE_ENV=test jest --maxWorkers=4",
        "test-ci": "NODE_ENV=test jest --ci --silent",
        "test-clear-cache": "NODE_ENV=test jest --clearCache"
    },
    "dependencies": {
        "colors": "1.4.0",
        "connect-redis": "7.1.1",
        "cors": "2.8.5",
        "dayjs": "1.11.13",
        "dotenv": "16.4.7",
        "express": "4.19.2",
        "express-async-errors": "3.1.1",
        "express-validator": "7.0.1",
        "graylog2": "0.2.1",
        "helmet": "7.1.0",
        "http-status-codes": "2.3.0",
        "module-alias": "2.2.3",
        "mongoose": "8.6.0",
        "proper-lockfile": "4.1.2",
        "redis": "4.7.0",
        "reflect-metadata": "^0.2.2",
        "typedi": "0.10.0",
        "umzug": "3.8.1",
        "validator": "13.12.0"
    },
    "devDependencies": {
        "@faker-js/faker": "8.4.0",
        "@types/cors": "2.8.17",
        "@types/express": "4.17.21",
        "@types/graylog2": "0.2.5",
        "@types/jest": "29.5.3",
        "@types/node": "20.16.2",
        "@types/proper-lockfile": "4.1.4",
        "@types/supertest": "2.0.12",
        "@types/validator": "13.12.2",
        "concurrently": "8.2.2",
        "jest": "29.6.1",
        "supertest": "6.3.3",
        "ts-jest": "29.1.2",
        "ts-node-dev": "2.0.0"
    }
}
